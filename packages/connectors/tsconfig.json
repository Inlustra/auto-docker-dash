{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      // Gross. Only needed until we can support Node 14 Exports in TS
      // See https://stackoverflow.com/questions/55518870/use-yarn-workspaces-and-typescripts-project-references-to-reference-another-pac
      "@plugsy/schema/server": ["../schema/dist/server"],
      "@plugsy/schema/client": ["../schema/dist/client"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json", "typings"],
  "references": [{ "path": "../common" }, { "path": "../schema" }]
}
